@{
    ViewData["Title"] = "Projects";
    ViewData["NavigationControl"] = "Projects";
}

<div class="text-center">
    <h5 class="display-6">Projects</h5>
</div>

<div class="container-fluid">
    <div id="projects" class="row" hx-get="/Projects/GetProjects" hx-trigger="load" hx-indicator="#summaryLoading"></div>

    <div id="summaryLoading" class="text-center htmx-indicator">
        <div class="spinner-border" role="status"><span class="sr-only"></span></div>
    </div>

    <div class="row mt-3 text-center">
        <div class="col-4"></div>
        <div class="col-4">
            <form hx-post="/Projects/CreateProject" hx-on::after-request="if(event.detail.successful) htmx.ajax('GET', '/Projects/GetProjects', '#projects')">
            <input class="form-control w-100" type="text" id="name" name="name" placeholder="Create a new Project">
        </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>