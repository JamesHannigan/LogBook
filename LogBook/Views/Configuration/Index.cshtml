@{
    ViewData["Title"] = "Configuration";
    ViewData["NavigationControl"] = "Configuration";
}

<h5 class="display-6 fw-semibold">Configuration</h5>

<hr style="height: 1px; border: 0; background: #333; background-image: linear-gradient(to right, #ccc, #333, #ccc);" />

<div class="container-fluid">
    <div id="projects" class="row" hx-get="/Configuration/GetProjects" hx-trigger="load" hx-indicator="#summaryLoading"></div>
    <div id="summaryLoading" class="text-center htmx-indicator">
        <div class="spinner-border" role="status"><span class="sr-only"></span></div>
    </div>

    <form class="w-50" hx-post="/Configuration/CreateProject" hx-on::after-request="if(event.detail.successful) htmx.ajax('GET', '/Configuration/GetProjects', '#projects')">
        <input class="form-control w-100" type="text" id="name" name="name" placeholder="Create a new Project">
    </form>
</div>

<script src="~/js/System/Configuration.js" asp-append-version="true"></script>